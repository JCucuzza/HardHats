<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.senior.hardhats.AddCustomer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout android:id="@+id/footer" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_alignParentBottom="true" >

                <Button android:id="@+id/save_customer_button" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="@string/save" />

                <Button android:id="@+id/cancel_customer_button" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="@string/cancel" />
            </LinearLayout>

            <EditText
                android:id="@+id/customer_first_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="monospace"
                android:inputType="textPersonName"
                android:hint="@string/first_name"
                android:text="" />

            <EditText
                android:id="@+id/customer_last_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="monospace"
                android:inputType="textPersonName"
                android:hint="@string/last_name"
                android:text="" />

            <EditText
                android:id="@+id/customer_company_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="monospace"
                android:inputType="textPersonName"
                android:hint="@string/company"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customer_phone_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:inputType="number"
                    android:hint="@string/phone_number"
                    android:text="" />

                <EditText
                    android:id="@+id/customer_fax_editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:inputType="number"
                    android:hint="@string/fax_number"
                    android:text="" />


            </LinearLayout>

            <EditText
                android:id="@+id/customer_email_address_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="monospace"
                android:inputType="textEmailAddress"

                android:hint="@string/email"
                android:text="" />

            <EditText
                android:id="@+id/customer_street_address_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="monospace"
                android:inputType="textPersonName"
                android:imeOptions="actionDone"
                android:hint="@string/street"
                android:text="" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/customer_city_editText"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="@string/city"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:text="" />

                <Spinner
                    android:id="@+id/customer_state_spinner"
                    android:layout_width="96dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/customer_zip_code_editText"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="@string/zip_code"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:text="" />

            </LinearLayout>




        </LinearLayout>


    </ScrollView>

</LinearLayout>