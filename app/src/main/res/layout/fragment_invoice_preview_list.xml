<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.senior.hardhats.InvoicePreviewListFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/fragmentinvicepreviewlist_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/fragmentinvicepreviewlist_total" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/fragmentinvicepreviewlist_date" />

    </RelativeLayout>

    <ListView
        android:id="@+id/fragmentinvoicepreviewlist_invoicesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".03" />
</LinearLayout>
